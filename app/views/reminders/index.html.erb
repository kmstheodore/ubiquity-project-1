<%= stylesheet_link_tag "index", "data-turbo-track": "reload" %>
<div class="container-fluid">
  <div id="left-cont">
    <div id="top-left">
    </div>
    <div id="l-times">
    <% @reminders.each do |reminder| %>
      <% time = reminder.strike.strftime("%H:%M")%>
      <%if reminder.complete == false%>
      <div class="time-box">
        <p><%= time %></p>
      </div>
      <%end%>
      <%end%>
    </div>
  </div>
  <div id="mid-cont">
  <div id="menu">
      Menu
    </div>
  <div class="reminder-cont">

    <% @reminders.each do |reminder| %>

      <%if reminder.complete == false%>

      <div class="reminder">
        <div class="name"><%= reminder.name %></div>



        <div class="delete">
          <%= form_with url: toggle_complete_path(reminder), method: :patch, local: true do |form| %>
              <%= form.hidden_field :complete, value: !reminder.complete %>
              <%= form.submit "", style: "width: 50%;" %>
            <% end %>
         <!-- <# link_to "x", reminder_path(reminder), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }  -->

        </div>
      </div>
      <%end%>
      <% end %>
  </div>
  </div>

  <div class="control">
    <div id="top-right">

    </div>
    <div class="right-bar" id="x-1">

    </div>
    <div class="right-bar" id="x-2">

    </div>
    <div class="right-bar" id="x-3">

    </div>
    <div class="right-bar" id="x-4">

    </div>
    <div class="right-bar" id="x-5">

    </div>
    <div class="right-bar" id="x-6">
      <i class="bi bi-person-circle"></i>
    </div>
    <div class="right-bar" id="x-7">

      <i class="bi bi-vector-pen"></i>
    </div>
    <div class="right-bar" id="x-8">
    <%= link_to new_reminder_path do %>
          <i class="bi bi-plus-circle-fill"></i>
        <% end %>

    </div>

  </div>
</div>
